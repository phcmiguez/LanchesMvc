@model Lanche
<div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
    <div class="card h-100">
        <img src="~/img/@Model.ImagemUrl" class="card-img-top img-fluid rounded-0 zoom" alt="@Model.Nome" style="object-fit: cover; height: 100px; transition: transform 0.5s ease;">
        <div class="card-body">
            <h3 class="card-title text-primary">@Model.Nome</h3>
            <h4 class="card-text">@Model.Preco.ToString("c")</h4>
            <hr>
            <p class="card-text">@Model.DescricaoCurta</p>
        </div>
    </div>
</div>